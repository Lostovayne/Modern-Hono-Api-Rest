{
  "name": "hono-drizzle",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "prepare": "husky",
    "format": "bunx @biomejs/biome format --write .",
    "lint": "bunx @biomejs/biome lint .",
    "check": "bunx @biomejs/biome check . --write",
    "test": "bun test",
    "db:generate:migration": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.script.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "ultracite": "5.2.16"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,jsonc,css,md,mdx}": [
      "bun format",
      "bun check ",
      "bun lint"
    ]
  }
}
